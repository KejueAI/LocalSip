# =============================================================================
# LocalSip Environment Configuration
# Copy this file to .env and adjust values for your deployment.
# =============================================================================

# -----------------------------------------------------------------------------
# External SIP/RTP IP
# The public IP that remote SIP peers will use to reach this system.
# On-prem: your server's public IP or SBC IP
# Cloud:   NAT instance EIP or load balancer IP
# VPC:     private IP if peers are in the same network, otherwise public IP
# -----------------------------------------------------------------------------
FS_EXTERNAL_SIP_IP=127.0.0.1
FS_EXTERNAL_RTP_IP=127.0.0.1

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_HOST=db

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0
REDIS_URL_SWITCH=redis://redis:6379/1

# -----------------------------------------------------------------------------
# Somleng API
# -----------------------------------------------------------------------------
RAILS_ENV=development
SOMLENG_API_HOST=api.somleng.dev
SOMLENG_API_PORT=3000
DASHBOARD_URL_HOST=http://dashboard.lvh.me:3000
DB_POOL=30

# -----------------------------------------------------------------------------
# Switch / FreeSWITCH
# -----------------------------------------------------------------------------
SWITCH_HOST=http://somleng-switch:8080
FS_ESL_HOST=freeswitch
FS_ESL_PORT=8021
FS_ESL_PASSWORD=secret
FS_DATABASE_HOST=db
SIP_GATEWAY_DIR=/sip_gateways

# SIP port exposed on the host (UDP)
SIP_PORT=5060

# -----------------------------------------------------------------------------
# Rating Engine (CGRates)
# -----------------------------------------------------------------------------
RATING_ENGINE_HOST=http://rating-engine-api:2080
RATING_ENGINE_USERNAME=cgrates
RATING_ENGINE_PASSWORD=password
STUB_RATING_ENGINE=false
STORDB_DBNAME=cgrates_test

# -----------------------------------------------------------------------------
# AnyCable / WebSocket
# -----------------------------------------------------------------------------
ANYCABLE_SECRET=secret
ANYCABLE_BROADCAST_ADAPTER=redisx

# -----------------------------------------------------------------------------
# Rails Secret (required for production)
# Generate with: openssl rand -hex 64
# -----------------------------------------------------------------------------
# SECRET_KEY_BASE=

# -----------------------------------------------------------------------------
# SMS Gateway (optional, only used with sms-gateway profile)
# -----------------------------------------------------------------------------
DEVICE_TOKEN=change-me
